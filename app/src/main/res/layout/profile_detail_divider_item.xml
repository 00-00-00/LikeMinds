<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <View
        android:id="@+id/divider"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/detail_divider_textView"
        android:layout_alignLeft="@id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Personal info"/>

    <FrameLayout
        android:layout_toLeftOf="@id/detail_divider_textView"
        android:layout_alignBottom="@id/detail_divider_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/profile_detail_divider_imageview"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_link_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </FrameLayout>

</RelativeLayout>