<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data"
        android:id="@+id/profile_detail_data"
        android:layout_alignLeft="@+id/profile_detail_title"
        android:textSize="15sp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_marginLeft="80dp"
        android:layout_below="@id/profile_detail_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Title"
        android:textSize="13sp"
        android:id="@+id/profile_detail_title"
        android:textColor="@color/secondary_text" />

    <FrameLayout
        android:layout_alignTop="@id/profile_detail_data"
        android:layout_alignBottom="@id/profile_detail_title"
        android:layout_toLeftOf="@id/profile_detail_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/profile_detail_item_imageview"
            android:layout_gravity="center"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_width="18dp"
            android:layout_height="18dp" />
    </FrameLayout>
</RelativeLayout>