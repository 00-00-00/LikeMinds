<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary" tools:targetApi="21">@color/primary_text</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/primary_dark</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/accent</item>
        <!--<item name="android:navigationBarColor" tools:targetApi="21">@color/primary_dark</item>-->
        <item name="popupMenuStyle">@style/PopupMenu.MyAppTheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.MyAppTheme</item>
    </style>



    <style name="Raised.Button" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/raised_button_background</item>
    </style>
    <style name="PopupMenu.MyAppTheme" parent="Theme.AppCompat.Light">
        <item name="android:popupBackground">@android:color/background_light</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textSize">15sp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>



</resources>
